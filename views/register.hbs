<di class="row mt-3">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mt-3">Register</h1>
            {{>message}}
            <form action="./register" method="POST">
                <div class="form-group mx-auto">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" id="name" placeholder="Enter name"
                        value="{{name}}">
                </div>
                <div class="form-group mx-auto">
                    <label for="name">E-mail</label>
                    <input type="text" class="form-control" name="email" id="email" placeholder="Enter mail" value="{{email}}">
                </div>
                <div class="form-group mx-auto">
                    <label for="name">Password</label>
                    <input type="text" class="form-control" name="password" id="password" placeholder="Enter password" value="{{password}}">
                </div>
                <div class="form-group mx-auto">
                    <label for="name">Confirm Password</label>
                    <input type="text" class="form-control" name="confirmPassword" id="confirmPassword"
                        placeholder="Enter confirmPassword">
                </div>

                <button class="btn btn-outline-primary btn-block" type="submit">Submit</button>
            </form>
            <p class="lead mt-4">Have An Account? <a href="./login">login</span></p>
        </div>

    </div>

    </div>